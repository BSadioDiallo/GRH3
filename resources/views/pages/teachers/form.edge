<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title> AdonisJS - A fully featured web framework for Node.js </title>

  @vite(['resources/css/app.css', 'resources/js/app.js'])
</head>

<body class="bg-gray-100 p-6">
  <div class="max-w-md mx-auto bg-white p-8 rounded shadow-md">
    <h2 class="text-xl font-semibold mb-6">Ajouter un enseignant</h2>
    <form action="#" method="POST">
      {{ csrfField() }}
      <div class="mb-4">
        <label for="lastname" class="block text-gray-700 font-semibold mb-2">Nom de famille</label>
        <input type="text" id="lastname" name="lastname" class="form-input w-full" required>
      </div>
      <div class="mb-4">
        <label for="firstname" class="block text-gray-700 font-semibold mb-2">Prénom</label>
        <input type="text" id="firstname" name="firstname" class="form-input w-full" required>
      </div>
      <div class="mb-4">
        <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
        <input type="email" id="email" name="email" class="form-input w-full" required>
      </div>
      <div class="mb-4">
        <label for="phone" class="block text-gray-700 font-semibold mb-2">Téléphone</label>
        <input type="text" id="phone" name="phone" class="form-input w-full" required>
      </div>
      <div class="mb-4">
        <label for="gender" class="block text-gray-700 font-semibold mb-2">Genre</label>
        <select id="gender" name="gender" class="form-select w-full" required>
          <option value="male">Masculin</option>
          <option value="female">Féminin</option>
        </select>
      </div>
      <div class="mb-4">
        <label for="date" class="block text-gray-700 font-semibold mb-2">Date de naissance</label>
        <input type="date" id="date" name="date" class="form-input w-full" required>
      </div>
      <div class="mb-4">
        <label for="address" class="block text-gray-700 font-semibold mb-2">Adresse</label>
        <textarea id="address" name="address" class="form-textarea w-full" required></textarea>
      </div>
      <div class="mb-4">
        <label for="department" class="block text-gray-700 font-semibold mb-2">Département</label>
        <input type="text" id="department" name="department" class="form-input w-full" required>
      </div>
      <div class="mt-6">
        <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Ajouter</button>
      </div>
    </form>
  </div>
</body>

</html>
